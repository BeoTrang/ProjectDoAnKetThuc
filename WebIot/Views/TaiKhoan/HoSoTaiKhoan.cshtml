<div class="container-fluid">
    <div class="row">
        <!-- Thông tin tài khoản -->
        <div class="col-xl-4 col-lg-6 col-md-12 col-sm-12 col-12 pt-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Thông tin tài khoản</h3>

                    <form id="ThongTinForm" novalidate>
                        <div class="mb-3">
                            <label for="name" class="form-label">Họ và tên</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập họ và tên" required>
                            <div class="invalid-feedback">Vui lòng nhập họ và tên.</div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email" required>
                            <div class="invalid-feedback">Vui lòng nhập email.</div>
                        </div>

                        <div class="mb-3">
                            <label for="phone_number" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="phone_number" name="phone_number" placeholder="Nhập số điện thoại" required>
                            <div class="invalid-feedback">Vui lòng nhập số điện thoại.</div>
                        </div>

                        <div class="mb-3">
                            <label for="account_login" class="form-label">Tài khoản</label>
                            <input type="text" class="form-control" id="account_login" name="account_login" placeholder="Nhập tài khoản" required>
                            <div class="invalid-feedback">Vui lòng nhập tài khoản.</div>
                        </div>

                        <button id="submitThongTin" type="submit" class="btn btn-primary w-100">
                            <span id="btnSpinnerThongTin" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            <span id="btnTextThongTin">Lưu chỉnh sửa</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Cài đặt Telegram -->
        <div class="col-xl-4 col-lg-6 col-md-12 col-sm-12 col-12 pt-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Cài đặt thông báo trên Telegram</h3>

                    <form id="TelegramForm" novalidate>
                        <div class="mb-3">
                            <label for="tele_chat_id" class="form-label">Chat ID</label>
                            <input type="text" class="form-control" id="tele_chat_id" name="tele_chat_id" placeholder="Nhập Chat ID" required>
                            <div class="invalid-feedback">Vui lòng nhập Chat ID.</div>
                        </div>

                        <div class="mb-3">
                            <label for="tele_bot_id" class="form-label">Bot ID</label>
                            <input type="text" class="form-control" id="tele_bot_id" name="tele_bot_id" placeholder="Nhập Bot ID" required>
                            <div class="invalid-feedback">Vui lòng nhập Bot ID.</div>
                        </div>

                        <button id="submitTelegram" type="submit" class="btn btn-primary w-100">
                            <span id="btnSpinnerTelegram" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            <span id="btnTextTelegram">Lưu thông tin</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Đổi mật khẩu -->
        <div class="col-xl-4 col-lg-6 col-md-12 col-sm-12 col-12 pt-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Đổi mật khẩu</h3>

                    <form id="DoiMatKhauForm" novalidate>
                        <div class="mb-3">
                            <label for="password_old" class="form-label">Mật khẩu cũ</label>
                            <input type="password" class="form-control" id="password_old" name="password_old" placeholder="Nhập mật khẩu" required>
                            <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
                        </div>

                        <div class="mb-3">
                            <label for="password_new1" class="form-label">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="password_new1" name="password_new1" placeholder="Nhập mật khẩu mới" required>
                            <div class="invalid-feedback">Vui lòng nhập mật khẩu mới.</div>
                        </div>

                        <div class="mb-3">
                            <label for="password_new2" class="form-label">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" id="password_new2" name="password_new2" placeholder="Xác nhận mật khẩu mới" required>
                            <div class="invalid-feedback">Vui lòng nhập xác nhận mật khẩu mới.</div>
                        </div>

                        <button id="submitDoiMatKhau" type="submit" class="btn btn-primary w-100">
                            <span id="btnSpinnerDoiMatKhau" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            <span id="btnTextDoiMatKhau">Đổi mật khẩu</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
