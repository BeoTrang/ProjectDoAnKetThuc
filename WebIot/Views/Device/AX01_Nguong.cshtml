@model ModelLibrary.Nguong_AX01

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-center mb-4">Cài đặt ngưỡng & cảnh báo</h4>

        <form id="AX01ThresholdForm">
            <input type="hidden" id="deviceid" value="@Model.deviceId" />
            <!-- NHIỆT ĐỘ -->
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0">Nhiệt độ (°C)</h5>
                    <div class="form-check form-switch">
                        <input class="form-check-input"
                               type="checkbox"
                               id="temEnable"
                               @(Model.temIsAlert ? "checked" : "")>
                        <label class="form-check-label">Bật cảnh báo</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngưỡng dưới</label>
                        <input type="number" step="0.1"
                               class="form-control"
                               id="temNguongDuoi"
                               value="@Model.temNguongDuoi">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngưỡng trên</label>
                        <input type="number" step="0.1"
                               class="form-control"
                               id="temNguongTren"
                               value="@Model.temNguongTren">
                    </div>
                </div>
            </div>

            <hr />

            <!-- ĐỘ ẨM -->
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0">Độ ẩm (%)</h5>
                    <div class="form-check form-switch">
                        <input class="form-check-input"
                               type="checkbox"
                               id="humEnable"
                               @(Model.humIsAlert? "checked" : "")>
                        <label class="form-check-label">Bật cảnh báo</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngưỡng dưới</label>
                        <input type="number" step="0.1"
                               class="form-control"
                               id="humNguongDuoi"
                               value="@Model.humNguongDuoi">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ngưỡng trên</label>
                        <input type="number" step="0.1"
                               class="form-control"
                               id="humNguongTren"
                               value="@Model.humNguongTren">
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Lưu cài đặt
            </button>

        </form>
    </div>
</div>
