@model ModelLibrary.AX01<ModelLibrary.DHT22, ModelLibrary.Relay4>

<link href="~/content/css/device/ax01.css" rel="stylesheet" />

<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" data-deviceid = "@Model.id">
        <!-- Header -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-2 px-3">
            <div>
                <h6 class="mb-0 fw-bold">@Model.name</h6>
                <small>ID: <strong>@Model.id</strong> | Loại: <strong>@Model.type</strong></small>
            </div>
            <div id="status">
                @if (Model.status == "1")
                {
                    <span class="badge bg-success rounded-pill px-3 py-2" id="status_@Model.id">
                        Online
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary rounded-pill px-3 py-2" id="status_@Model.id">
                        Offline
                    </span>
                }
            </div>
        </div>

        <!-- Body -->
        <div class="card-body bg-light">
            <div class="row g-3 mb-4">
                <div class="col-6">
                    <div class="p-3 text-center bg-white border rounded-3 shadow-sm h-100">
                        <i class="bi bi-thermometer-half text-danger fs-2 mb-1"></i>
                        <div class="fw-bold text-danger fs-4"><span id="tem_@Model.id">@Model.data.tem</span>°C</div>
                        <div class="text-muted small mt-1">Nhiệt độ</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-3 text-center bg-white border rounded-3 shadow-sm h-100">
                        <i class="bi bi-droplet-half text-primary fs-2 mb-1"></i>
                        <div class="fw-bold text-primary fs-4"><span id="hum_@Model.id">@Model.data.hum</span>%</div>
                        <div class="text-muted small mt-1">Độ ẩm</div>
                    </div>
                </div>
            </div>

            <div class="bg-white border rounded-3 shadow-sm p-3">
                <h6 class="text-muted mb-3 text-center">
                    <i class="fa-solid fa-plug text-primary me-2"></i> 
                    Relay điều khiển
                </h6>

                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                        <div><i class="fa-solid fa-power-off text-danger me-2"></i>Relay 1</div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" id="relay1_@Model.id" type="checkbox" @(Model.relays.relay1 == 1 ? "checked" : "")>
                        </div>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                        <div><i class="fa-solid fa-power-off text-danger me-2"></i>Relay 2</div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" id="relay2_@Model.id" type="checkbox" @(Model.relays.relay2 == 1 ? "checked" : "")>
                        </div>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                        <div><i class="fa-solid fa-power-off text-danger me-2"></i>Relay 3</div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" id="relay3_@Model.id" type="checkbox" @(Model.relays.relay3 == 1 ? "checked" : "")>
                        </div>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                        <div><i class="fa-solid fa-power-off text-danger me-2"></i>Relay 4</div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" id="relay4_@Model.id" type="checkbox" @(Model.relays.relay4 == 1 ? "checked" : "")>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="mt-3 text-end text-muted small">
                <i class="fa-regular fa-clock me-1"></i> Cập nhật: <span id="time_@Model.id">@Model.timestamp</span>
            </div>
        </div>
    </div>
</div>