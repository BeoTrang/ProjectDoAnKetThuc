@model ModelLibrary.AX02<ModelLibrary.DHT22, ModelLibrary.Name_AX02>

<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-3">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" data-deviceid="@Model.id">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-2 px-3">
            <div>
                <h6 class="mb-0 fw-bold">@Model.names.master</h6>
                <small>ID: <strong>@Model.id</strong> | Loại: <strong>@Model.type</strong></small>
            </div>
            <div id="status">
                @if (Model.status == "1")
                {
                    <span class="badge bg-success rounded-pill px-3 py-2" id="status_@Model.id">
                        Online
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary rounded-pill px-3 py-2" id="status_@Model.id">
                        Offline
                    </span>
                }
            </div>
        </div>

        <div class="card-body bg-light">
            <div class="row g-3 mb-4">
                <div class="col-6">
                    <div class="p-3 text-center bg-white border rounded-3 shadow-sm h-100">
                        <i class="bi bi-thermometer-half text-danger fs-2 mb-1"></i>
                        <div class="fw-bold text-danger fs-4"><span id="tem_@Model.id">@Model.data.tem</span>°C</div>
                        <div class="text-muted small mt-1">Nhiệt độ</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-3 text-center bg-white border rounded-3 shadow-sm h-100">
                        <i class="bi bi-droplet-half text-primary fs-2 mb-1"></i>
                        <div class="fw-bold text-primary fs-4"><span id="hum_@Model.id">@Model.data.hum</span>%</div>
                        <div class="text-muted small mt-1">Độ ẩm</div>
                    </div>
                </div>
            </div>

            <div class="mt-3 text-end text-muted small">
                <button class="btn btn-light device-history" id="@Model.id">
                    <i class="bi bi-clock-history"></i>
                </button>
                <button class="btn btn-light device-setting" id="@Model.id">
                    <i class="bi bi-gear"></i>
                </button>

            </div>
        </div>
    </div>
</div>