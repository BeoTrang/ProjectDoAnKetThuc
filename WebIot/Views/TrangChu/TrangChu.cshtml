@model WebIot.Models.TrangChu
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/_Layout/_Layout.cshtml";
}

<div class="chat-container">
    <!-- Overlay cho mobile -->
    <div class="overlay" id="overlay"></div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="btn btn-primary mb-3 w-100">
            <i class="bi bi-plus"></i> <span class="item-text">New Chat</span>
        </button>
        <div class="flex-grow-1">
            <div class="menu-item">
                <i class="bi bi-chat-left-text"></i>
                <span class="item-text">Chat cũ 1</span>
            </div>
            <div class="menu-item">
                <i class="bi bi-chat-left-text"></i>
                <span class="item-text">Chat cũ 2</span>
            </div>
        </div>
        <div>
            <hr>
            <div class="menu-item">
                <i class="bi bi-gear"></i>
                <span class="item-text">Cài đặt</span>
            </div>
        </div>
    </div>

    <!-- Main chat -->
    <div class="main">
        <header class="py-3 mb-3 border-bottom">
            <div class="container-fluid d-grid gap-3 align-items-center" style="grid-template-columns: 1fr 2fr;">
                <div class="dropdown">
                    <!-- Desktop: toggle thu gọn -->
                    <button class="toggle-btn d-none d-md-inline" id="toggleBtn">
                        <i class="bi bi-layout-sidebar-inset-reverse icon-header"></i>
                    </button>
                    <!-- Mobile: toggle overlay -->
                    <button class="btn btn-outline-secondary d-md-none" id="mobileMenu">
                        <i class="bi bi-list"></i>
                    </button>
                </div>

                <div class="d-flex align-items-center justify-content-end">
                    <div class="flex-shrink-0 dropdown">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle icon-header"></i>
                        </a>
                        <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-gear icon-header"></i> Cài đặt
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-person icon-header"></i> Hồ sơ
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <button class="dropdown-item" id="DangXuat">
                                    <i class="bi bi-box-arrow-right icon-header"></i> Đăng xuất
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <div class="main-body">
            <!-- Nội dung chat ở đây -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/content/js/TrangChu/TrangChu.js"></script>
}
